  <body class="text-center">
    <main class="form-signup m-auto">
    <div class="card card-body">
      <form action="/auth/signup" method="POST">
        <img class="mb-4" src="/img/person-plus.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
          <input type="name" class="form-control{{#if error.name }} is-invalid{{/if}}" id="floatingame"
           placeholder="Name" name="name" value="{{#if value.name}} {{value.name}}{{/if}} ">
          <label for="name">Name</label>
          <div class="invalid-feedback">
            {{error.name}}
          </div>
        </div>

        <div class="form-floating">
          <input type="email" class="form-control{{#if error.email }} is-invalid{{/if}}" id="floatingEamil"
           placeholder="name@example.com" name="email" value="{{#if value.email}} {{value.email}}{{/if}}" >
          <label for="email">Email address</label>
        <div class="invalid-feedback">
            {{error.email}}
        </div>
        </div>


        <div class="form-floating">
          <input type="password" class="form-control{{#if error.password }} is-invalid{{/if}}" id="floatingPassword" 
          placeholder="Password" name="password" value="{{#if value.password}} {{value.password}}{{/if}}">
          <label for="password">Password</label>
        <div class="invalid-feedback">
            {{error.password}}
        </div>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control{{#if error.confirmPassword }} is-invalid{{/if}}" id="confirmPassword" placeholder=" Confirm Password" name="confirmPassword">
          <label for="confirmPassword"> Confirm Password</label>
          <div class="invalid-feedback">
            {{error.confirmPassword}}
          </div>
        </div>

        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign Up</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
      </form>

  </div>      
