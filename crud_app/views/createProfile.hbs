                        },
                        error: function (e) {
                            console.log(e)
                            //avatar.src = source;
                            $alert.show().addClass('alert-warning').text('delete error');
                        },
                    });
                }
            }

            $('#cropImageBtn').on('click', function (ev) {
                $uploadCrop.croppie('result', {
                    type: 'base64',
                    format: 'jpeg',
                    size: "original",
                    quality: 1
                }).then(function (resp) {
                    $('#item-img-output').attr('src', resp);
                    $.ajax('/profilePic/createProfile', {
                        method: 'POST',
                        async: true,
                        cache: false,
                        data: {
                            "img": resp,
