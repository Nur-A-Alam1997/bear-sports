  <body class="text-center bg-dark">
    <main class="form-signup m-auto">
    <div class="card card-body">
      <form action="/auth/otp/{{email}}" method="POST">
        <img class="mb-4" src="/img/person-plus.svg" alt="" width="72" height="57">
        <h1 class="h3 mb-3 fw-normal">OTP Authentication code sent to {{email}}</h1>


        {{!-- <div class="form-floating">
          <input type="email" class="form-control{{#if error.email }} is-invalid{{/if}}" id="floatingEmail"
           placeholder="name.com" name="email" value="{{#if value.email}} {{value.email}}{{/if}}" >
          <label for="email">Email address</label>
        <div class="invalid-feedback">
            {{error.email}}
        </div>
        </div> --}}
      


        <div class="form-floating">
          <input type="password" class="form-control{{#if error.password }} is-invalid{{/if}}" id="floatingPassword" 
          placeholder="Authentication" name="OTP" value="{{#if value.password}} {{value.password}}{{/if}}">
          <label for="OTP">OTP</label>
        <div class="invalid-feedback">
            {{error.password}}
        </div>
        </div>

        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
      </form>

  </div>  


    
